{
  "manifest_version": 3,
  "name": "TaskingBot AI Assistant",
  "version": "1.0",
  "description": "AI assistant floating action button",
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://tasking.tech/*",
    "https://*.tasking.tech/*"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}