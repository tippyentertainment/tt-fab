{
  "manifest_version": 3,
  "name": "TaskingBot FAB",
  "version": "2.0",
  "description": "Quick task creation for TaskingBot with chat interface",
  "permissions": ["activeTab", "storage", "clipboardRead", "clipboardWrite", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_end"
  }],
  "action": {
    "default_popup": "popup.html",
    "default_title": "TaskingBot"
  }
}