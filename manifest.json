{
  "manifest_version": 3,
  "name": "TaskingBot",
  "version": "1.0",
  "description": "AI assistant floating action button",
  "permissions": [
    "activeTab",
    "sidePanel",
    "tabs",
    "storage",
    "scripting",
    "identity"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://tasking.tech/*",
    "https://*.tasking.tech/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "oauth2": {
    "client_id": "YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email",
      "https://www.googleapis.com/auth/userinfo.profile"
    ]
  }
}