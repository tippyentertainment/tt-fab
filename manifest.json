{
  "manifest_version": 3,
  "name": "TaskingBot",
  "version": "1.1",
  "description": "AI assistant floating action button",
  "permissions": ["activeTab", "sidePanel", "tabs", "storage", "cookies"],
  "host_permissions": ["https://tasking.tech/*", "<all_urls>"],
  "action": {
    "default_icon": {
      "16": "icons/logo.png",
      "48": "icons/logo.png",
      "128": "icons/logo.png"
    }
  },
  "icons": {
    "16": "icons/logo.png",
    "48": "icons/logo.png",
    "128": "icons/logo.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src https://tasking.tech https://*.tasking.tech; img-src 'self' data: https://tasking.tech https://*.tasking.tech; connect-src https://tasking.tech https://*.tasking.tech; style-src 'self' 'unsafe-inline'"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
