{
  "manifest_version": 3,
  "name": "TaskingBot",
  "version": "1.0",
  "description": "AI assistant floating action button",
  "permissions": ["activeTab", "sidePanel", "tabs", "storage"],
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "host_permissions": [
    "https://tasking.tech/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}